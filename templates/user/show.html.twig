{% extends 'base_dash.html.twig' %}

{% block title %}Usuario{% endblock %}

{% block content %}
    <h1>Usuario</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>
                    {% for role in user.roles %}{{ role|trans }}{% if not loop.last %}, {% endif %}{% endfor %}
                </td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td><img src="{% if user.avatar is not empty %}{{ asset(IMAGES_UPLOAD ~ user.avatar) }}{% else %}{{ asset(APP_DEFAULT_AVATAR) }}{% endif %}" alt="{{ user }}" style="max-height:60px;"/></td>
            </tr>
        </tbody>
    </table>

    <div class="text-right mt-5">
        <a href="{{ path('user_index') }}">Volver</a>
        <a class="btn btn-warning ml-2" href="{{ path('user_edit', {'id': user.id}) }}"><i class="far fa-edit"></i> Editar</a>
    </div>
{% endblock %}
