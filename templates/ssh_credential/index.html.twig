{% extends 'base_dash.html.twig' %}

{% block title %}Credenciales SSH{% endblock %}

{% block content %}
    <h1>Credenciales SSH</h1>

    <table id="dtable" class="table">
        <thead>
            <tr>
                <th>Título</th>
                <th>Usuario</th>
                <th>Contraseña</th>
                <th>Puerto</th>
                <th class="no-content"></th>
            </tr>
        </thead>
        <tbody>
        {% for ssh_credential in ssh_credentials %}
            <tr>
                <td>{{ ssh_credential.title }}</td>
                <td>{{ ssh_credential.username }}</td>
                <td>**********</td>
                <td>{{ ssh_credential.port }}</td>
                <td>
                        <a class="text-primary" href="{{ path('ssh_credential_show', {'id': ssh_credential.id}) }}" title="Ver"><i class="fas fa-search-plus"></i></a>
                        <a class="text-warning" href="{{ path('ssh_credential_edit', {'id': ssh_credential.id}) }}" title="Editar"><i class="far fa-edit"></i></a>
                        <a class="text-danger prompt-item" href="javascript:void(0);" title="Eliminar" data-dom-action="delete" data-method="delete" data-type="warning" data-url="{{ path('ssh_credential_delete', {'id': ssh_credential.id}) }}" data-confirm-text="Eliminar" data-title="Eliminar credenciales" data-message="¿Seguro que quiere eliminar estas credenciales?">
                            <i class="far fa-trash-alt"></i>
                        </a>
                    </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No se encontraron registros.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-right mt-5">
        <a href="{{ path('ssh_credential_index') }}">Volver</a>
        <a class="btn btn-primary ml-2" href="{{ path('ssh_credential_new') }}">
            <i class="fas fa-plus"></i> Nuevas credenciales
        </a>
    </div>
{% endblock %}
