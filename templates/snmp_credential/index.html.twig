{% extends 'base_dash.html.twig' %}

{% block title %}Credenciales SNMP{% endblock %}

{% block content %}
    <h1>Credenciales SNMP</h1>

    <table id="dtable" class="table">
        <thead>
            <tr>
                <th>Título</th>
                <th>Comunidad SNMP</th>
                <th class="no-content"></th>
            </tr>
        </thead>
        <tbody>
            {% for snmp_credential in snmp_credentials %}
                <tr>
                    <td>{{ snmp_credential.title }}</td>
                    <td>********</td>
                    <td>
                        <a class="text-primary" href="{{ path('snmp_credential_show', {'id': snmp_credential.id}) }}" title="Ver"><i class="fas fa-search-plus"></i></a>
                        <a class="text-warning" href="{{ path('snmp_credential_edit', {'id': snmp_credential.id}) }}" title="Editar"><i class="far fa-edit"></i></a>
                        <a class="text-danger prompt-item" href="javascript:void(0);" title="Eliminar" data-dom-action="delete" data-method="delete" data-type="warning" data-url="{{ path('snmp_credential_delete', {'id': snmp_credential.id}) }}" data-confirm-text="Eliminar" data-title="Eliminar credenciales" data-message="¿Seguro que quiere eliminar estas credenciales?">
                            <i class="far fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No se encontraron registros.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="text-right mt-5">
        <a href="{{ path('snmp_credential_index') }}">Volver</a>
        <a class="btn btn-primary ml-2" href="{{ path('snmp_credential_new') }}">
            <i class="fas fa-plus"></i> Nuevas credenciales
        </a>
    </div>
{% endblock %}
